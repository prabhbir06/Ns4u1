<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Cruelty">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Cruelty by husband or his relatives (Section 498A)"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#03A9F4"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="A separate chapter of IPC deals with the issues of cruelty by a husband or his relatives under Section 498A,IPC. The objective behind the introduce of this provision was to punish the husband and his relatives who torture, ill-treat and harass a women with a view to force her or any other person related to het to meet any unlawful demands.  "
        android:textColor="#000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_editor_absoluteX="156dp" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="This section has given a new dimension to the concept of cruelty which is the essene of this section, for the purpose of matrimonial relief. Not every type of cruelty will attract Section 498A. It has been mentioned under the section that what kind of cruelty is included hereby. The punishment for this office is imprisonment for a term which may extend to three years with fine. "
        android:textColor="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        tools:layout_editor_absoluteX="78dp" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="To constitute an offence under Section 498A, the following are the necessary conditions. "
        android:layout_marginTop="14dp"
        android:textColor="#03A9F4"
        app:layout_constraintTop_toBottomOf="@+id/textView32"
        tools:layout_editor_absoluteX="190dp" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="1. The victim must be married woman/widow"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView35"
        tools:layout_editor_absoluteX="95dp" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="2. She has been subjected to cruelty by her husband or his relatives."
        android:textColor="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView37"
        tools:layout_editor_absoluteX="143dp" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="3. Such cruelty consisted of either"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView38"
        tools:layout_editor_absoluteX="134dp" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="->Harassment of a woman with a view to coerce her meeting a demand of dowry; or"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView39"
        tools:layout_editor_absoluteX="186dp" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="->A wilful conduct by the husband or his relatives of such a nature as is likely to lead the lady to commit suicide or to cause grave injury to her life, limb or heath. That such injury inflicted either physically or mentally."
        android:textColor="#000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView40"
        tools:layout_editor_absoluteX="117dp" />


</androidx.constraintlayout.widget.ConstraintLayout>