<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Murder">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Murder, Dowry death, Abetment of Suicide, etc. (Section 302, 304B and 306)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#03A9F4"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Dowry deaths and bride burning are sinful act which are still prevailing in the Indian society. It is a symptom of a special social illness and are unfortunate development of our society. For this serious matter, the special provision was inserted under IPC through Section 304B which deals with dowry deaths."
        android:layout_marginTop="11dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_editor_absoluteX="164dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Section 304B(1) defines dowry death whereas clause (2) lays down its punishment which is not less than seven years and may extend to life imprisonment."
        android:textColor="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        tools:layout_editor_absoluteX="190dp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="The following ingredients of the offence need to be established-"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#03A9F4"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        tools:layout_editor_absoluteX="260dp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="1. The death of woman must be caused by burns or bodily injury or otherwise than under normal circumstances."
        android:textColor="#000"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView24"
        tools:layout_editor_absoluteX="147dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="2. Such death must occur within the period of seven years of marriage."
        android:layout_marginTop="12dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        tools:layout_editor_absoluteX="104dp" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="3. Such cruelty must be in connection with demand of dowry."
        android:layout_marginTop="12dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/textView28"
        tools:layout_editor_absoluteX="121dp" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="4. Such cruelty must be shown out soon before her death."
        android:textColor="#000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView33"
        tools:layout_editor_absoluteX="104dp" />


</androidx.constraintlayout.widget.ConstraintLayout>