<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Acidattack">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Acid Attack (Section 326A and 326B) "
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="#03A9F4"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="The Criminal Law (Amendment)Act, 2013 incorporated Section 326A and 326B with an intend to make specific provision for punishment in the case of acid attack."
        android:layout_marginTop="13dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="145dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:text="Section 326A focuses on voluntarily causing grievous hurt by using acid. In the view of this section, whosoever causes permanent or partial damage or burns, disfigures or disables any part of the body of a person or causes grievous hurt by throwing or administering acid with an intention to cause such injury or hurt will be punished with imprisonment of at least ten years which may extend to life imprisonment with fine."
        android:layout_marginTop="10dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="137dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:text="Section 326B has more legislative focus on the act of throwing or attempting to throw acid with the intention of causing grievous hurt. The punishment under this section is imprisonment of not less than five years with fine which may extend upto seven years."
        android:layout_marginTop="10dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="146dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:text="Essential Ingredients of Acid Attack"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        android:textColor="#03A9F4"
        android:text="The following are the requisites of an acid attack-"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="133dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="1. Permanent/partial damage/deformity/burn/disable any part of the body of any person;or"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="159dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="2. Grievous hurt by throwing acid;or"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:layout_editor_absoluteX="108dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="64dp"
        android:text="3. There must be an attention to cause injury or hurt."
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>